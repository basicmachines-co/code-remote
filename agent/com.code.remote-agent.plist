<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.code.remote-agent</string>

    <key>ProgramArguments</key>
    <array>
        <!-- Update YOUR_USERNAME below to match your Mac username -->
        <string>/Users/YOUR_USERNAME/code/code-remote/agent/run.sh</string>
    </array>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin</string>
    </dict>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <true/>

    <key>StandardOutPath</key>
    <string>/tmp/code-remote-agent.log</string>

    <key>StandardErrorPath</key>
    <string>/tmp/code-remote-agent.err</string>

    <key>WorkingDirectory</key>
    <!-- Update YOUR_USERNAME below to match your Mac username -->
    <string>/Users/YOUR_USERNAME</string>
</dict>
</plist>
